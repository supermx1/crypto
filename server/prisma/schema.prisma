datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model PrivateInvestigator {
  companyName              String?
  companyRegistrationId    String?
  createdAt                DateTime @default(now())
  cyberSecurityExpert      String?
  fraudInvestigationNumber String?
  id                       String   @id @default(cuid())
  image                    String?
  investigatorEmail        String?
  investigatorName         String?
  updatedAt                DateTime @updatedAt
}

model CryptocurrencySearch {
  amount             Float?
  blockNumber        Int?
  createdAt          DateTime                                    @default(now())
  cryptocurrencyType EnumCryptocurrencySearchCryptocurrencyType?
  fromWallet         String?
  id                 String                                      @id @default(cuid())
  keyPhrase          String?
  privateNote        String?
  status             EnumCryptocurrencySearchStatus?
  timeOfTheft        DateTime?
  toWallet           String?
  transactionHash    String?
}

enum EnumCryptocurrencySearchCryptocurrencyType {
  Bitcoin
  Ethereum
  Litecoin
  Dogecoin
  Ripple
  Shiba
}

enum EnumCryptocurrencySearchStatus {
  Processing
  Completed
  Failed
}